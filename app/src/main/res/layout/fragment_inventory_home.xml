<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rmart.inventory.views.MyCategoryListFragment">
    <RelativeLayout
        android:background="@color/inventory_header_bg"
        android:id="@+id/category_header"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/category_count"
            android:text="@string/total_categories"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_list"
        android:layout_below="@+id/category_header"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>