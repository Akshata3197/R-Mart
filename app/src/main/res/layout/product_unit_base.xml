<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:background="@drawable/product_unit_base_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:layout_toStartOf="@id/unit_edit"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/unit_edit">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_title_1"
            style="@style/product_unit_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_title_2"
            style="@style/product_unit_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sub_title_3"
            style="@style/product_unit_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/discount"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/offer"
            style="@style/product_unit_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/unit_status"
            style="@style/product_unit_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/unit_edit"
        android:background="@drawable/pencil"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="4dp"
        android:tint="@color/grey_color_three"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>
