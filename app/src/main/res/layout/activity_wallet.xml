<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="walletViewModel"
            type="com.rmart.wallet.viewmodel.WalletViewModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrounndgray"
    tools:context=".wallet.view.WalletActivity">
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/linear"
           android:orientation="vertical">
           <androidx.appcompat.widget.Toolbar
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:titleTextColor="@color/white"
               app:title="@string/my_wallet"
               android:id="@+id/toolbar"
               app:theme="@style/MyThemeOverlay_Toolbar2"
               android:background="@color/colorPrimary"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="2"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/spacing_standard">
           <androidx.cardview.widget.CardView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_weight="1"
               app:cardBackgroundColor="@color/white"
               android:layout_marginRight="@dimen/spacing_standard"
               android:layout_marginLeft="@dimen/spacing_standard"
               app:cardElevation="8dp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/rokadmark_wallet"
                       android:textSize="18sp"
                       android:fontFamily="@font/montserrat_regular"
                       android:textStyle="bold"
                       android:layout_marginTop="@dimen/spacing_standard"
                       android:layout_marginLeft="@dimen/spacing_standard"
                       android:textColor="@color/black"
                       android:id="@+id/wallet_textView"
                       android:layout_marginStart="@dimen/spacing_standard" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/low_balance"
                       android:fontFamily="@font/montserrat_regular"
                       android:layout_marginLeft="@dimen/spacing_standard"
                       android:layout_marginTop="@dimen/spacing_standard"
                       android:textSize="12sp"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@{@string/Rs_symbol(walletViewModel.walletResponseMutableLiveData.data.walletAmount)}"
                       android:layout_marginTop="@dimen/spacing_standard"
                       android:layout_marginLeft="@dimen/spacing_standard"
                       android:textSize="15pt"
                       android:fontFamily="@font/montserrat_regular"
                       android:padding="@dimen/_5sdp"
                       android:textStyle="bold"
                       android:textColor="@color/red"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_weight="1"
               android:visibility="gone"
               app:cardBackgroundColor="@color/white"
               app:cardElevation="8dp"
               android:layout_marginRight="@dimen/spacing_standard"
               android:layout_marginEnd="@dimen/spacing_standard">
               <LinearLayout
                   android:layout_width="120dp"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:padding="@dimen/_10sdp"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="@dimen/_10sdp"
                       android:src="@drawable/ic_wallet"
                       android:contentDescription="@string/todo" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:text="@string/recharge_history"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_weight="1"
               android:id="@+id/billing_cardView"
               app:cardBackgroundColor="@color/white"
               app:cardElevation="8dp"
               android:layout_marginRight="@dimen/spacing_standard"
               android:layout_marginEnd="@dimen/spacing_standard">
               <LinearLayout
                   android:layout_width="120dp"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:orientation="vertical">
                   <ImageView
                       android:layout_width="@dimen/_80sdp"
                       android:layout_height="@dimen/_80sdp"
                       android:padding="@dimen/_15sdp"
                       android:src="@drawable/wallet_billing"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:fontFamily="@font/montserrat_regular"
                       android:text="@string/billing_history"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>

       </LinearLayout>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="8dp"
               android:layout_weight="1"
               android:visibility="gone"
               android:layout_marginLeft="@dimen/spacing_standard"
               android:layout_marginRight="@dimen/spacing_standard"
               android:layout_marginTop="15dp"
               app:cardBackgroundColor="@color/white"
               app:cardElevation="8dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/spacing_standard"
                   android:layout_marginRight="@dimen/spacing_standard"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/add_money_text"
                       android:textStyle="bold"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:textColor="@color/black"/>
                   <androidx.appcompat.widget.AppCompatEditText
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@drawable/otp_background"
                       android:hint="@string/amount_text"
                       android:textSize="@dimen/_15sdp"
                       android:id="@+id/add_money_editText"
                       android:layout_marginTop="@dimen/_10sdp"
                       android:padding="@dimen/spacing_standard"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/recommended_text"
                       android:textColor="@color/black"
                       android:layout_marginTop="@dimen/_15sdp"
                       android:textSize="12sp"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:weightSum="4"
                       android:layout_marginTop="15dp"
                       android:orientation="horizontal">
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:textColor="@color/green"
                           android:layout_marginRight="@dimen/spacing_standard"
                           android:padding="@dimen/_5sdp"
                           android:background="@drawable/login_edit_background"
                           android:text="+₹1,000"
                           />
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:textColor="@color/green"
                           android:padding="@dimen/_5sdp"
                           android:layout_marginRight="@dimen/spacing_standard"
                           android:background="@drawable/login_edit_background"
                           android:text="+₹1,000"
                           />
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:textColor="@color/green"
                           android:layout_marginRight="@dimen/spacing_standard"
                           android:padding="@dimen/_5sdp"
                           android:background="@drawable/login_edit_background"
                           android:text="+₹1,000"
                           />
                       <TextView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:textColor="@color/green"
                           android:padding="@dimen/_5sdp"
                           android:background="@drawable/login_edit_background"
                           android:text="@string/_1_000"
                           />
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginTop="@dimen/_15sdp">
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_notification_clock"
                           android:padding="@dimen/_5sdp"
                           android:layout_marginTop="@dimen/dp_3"
                           app:tint="@color/green" />
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="@dimen/_5sdp"
                           android:text="@string/notification_message"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/_15sdp"
                       android:orientation="horizontal">

                       <Switch
                           android:id="@+id/btn_switch"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:background="@null"
                           android:checked="true"
                           android:layout_marginEnd="@dimen/spacing_standard"
                           android:scaleX="0.5"
                           android:scaleY="0.5"
                           android:layout_marginRight="@dimen/spacing_standard"
                           android:layout_gravity="center_vertical"
                           android:track="@drawable/custom_switch"
                           android:thumbTint="@color/green"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Set reminder"
                           android:gravity="center"/>



                   </LinearLayout>


               </LinearLayout>

           </androidx.cardview.widget.CardView>
       </LinearLayout>
   </androidx.core.widget.NestedScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:padding="@dimen/_10sdp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/add_money"
        android:textAllCaps="true" />
    <FrameLayout
        android:id="@+id/base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
</layout>