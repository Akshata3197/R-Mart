<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="shopDetails"
            type="com.rmart.customer.shops.list.models.ShopDetailsModel" />
    </data>

<RelativeLayout
    android:id="@+id/lt_slider"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_height="200dp">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_margin="5dp"

        android:layout_height="200dp"/>

    <com.landepatil.vishal.CircleIndicator2
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:maxdots="5"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        custom:non_active_dot="@drawable/ic_dot_gray_24dp"
        custom:active_dot="@drawable/ic_dot_blue_24dp"
        />
    <View
        android:id="@+id/view"
        android:layout_height="0dp"
        android:layout_width="wrap_content"

        />
</RelativeLayout>

</layout>