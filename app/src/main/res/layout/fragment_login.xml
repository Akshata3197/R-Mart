<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="LoginServiceModule"
            type="com.rmart.authentication.login.viewmodels.LoginServicemodule" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/login_root"
        tools:context="com.rmart.authentication.views.LoginFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/slice"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/cornner" />


                <ImageView
                    android:id="@+id/app_logo"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="120dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/applogo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app_logo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/welcome"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/nice_to_see_you_again"
                        android:textColor="@color/item_sub_title_color"
                        android:textSize="@dimen/text_regular_size"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/mobile_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/login_edit_background"
                            android:orientation="horizontal"
                            tools:ignore="UselessParent">

                            <EditText
                                android:id="@+id/mobile_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="@string/allow_number_digits"
                                android:inputType="numberSigned"
                                android:maxLength="10"
                                android:text="@{LoginServiceModule.mobile_number}"
                                android:background="@android:color/transparent"
                                android:maxLines="1"
                                android:padding="16dp"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="-5dp"
                            android:background="#FFFFFF"
                            android:text="@string/mobile_number"
                            android:textColor="@color/offer_color" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/security_pin"
                        android:layout_margin="15dp"
                        android:visibility="gone"
                        android:textColor="@color/item_sub_title_color"
                        android:textSize="@dimen/text_regular_size"
                        android:id="@+id/security_textView" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:id="@+id/layout_opt"
                        android:weightSum="4"
                        android:visibility="gone"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@id/security_textView"
                        android:orientation="horizontal">

                        <EditText
                            android:layout_width="55dp"
                            android:layout_height="42dp"
                            android:maxLength="1"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:imeOptions="actionNone"
                            android:background="@drawable/otp_background"
                            android:layout_marginRight="10dp"
                            android:id="@+id/editTextOne"
                            android:inputType="number"
                            android:nextFocusRight="@id/editTextTwo" />


                        <EditText
                            android:layout_width="55dp"
                            android:layout_height="42dp"
                            android:maxLength="1"
                            android:imeOptions="actionNone"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/editTextTwo"
                            android:background="@drawable/otp_background"
                            android:inputType="number"
                            android:nextFocusRight="@id/editTextThree" />

                        <EditText
                            android:layout_width="55dp"
                            android:layout_height="42dp"
                            android:maxLength="1"
                            android:background="@drawable/otp_background"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:imeOptions="actionNone"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:nextFocusRight="@id/editTextFour"
                            android:inputType="number"
                            android:id="@+id/editTextThree" />

                        <EditText
                            android:layout_width="55dp"
                            android:layout_height="42dp"
                            android:maxLength="1"
                            android:gravity="center"
                            android:imeOptions="actionNone"
                            android:layout_weight="1"
                            android:background="@drawable/otp_background"
                            android:layout_marginLeft="10dp"
                            android:inputType="number"
                            android:id="@+id/editTextFour" />
                    </LinearLayout>


                    <!-- <com.google.android.material.textfield.TextInputLayout
                         android:id="@+id/current_password_layout"
                         style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="15dp"
                         android:gravity="center"
                         android:hint="@string/mobile_number">

                         <androidx.appcompat.widget.AppCompatEditText
                             android:id="@+id/mobile_number"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:digits="@string/allow_number_digits"
                             android:inputType="numberSigned"
                             android:maxLength="10"
                             android:maxLines="1"
                             android:paddingStart="10dp"
                             android:paddingEnd="10dp"
                             android:textSize="16sp"
                             />

                     </com.google.android.material.textfield.TextInputLayout>-->

                    <!--  <com.google.android.material.textfield.TextInputLayout
                          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="15dp"
                          android:gravity="center"
                          android:hint="@string/hint_password">

                          <androidx.appcompat.widget.AppCompatEditText
                              android:id="@+id/password"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:digits="@string/allow_digits_for_password"
                              android:inputType="textPassword"
                              android:maxLength="11"
                              android:maxLines="1"
                              android:paddingStart="10dp"
                              android:paddingEnd="10dp"
                              android:textSize="16sp" />
                      </com.google.android.material.textfield.TextInputLayout>-->

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/field_height"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:onClick="@{(v) ->LoginServiceModule.onClick(v)}"
                        android:background="@drawable/submit_button_bg"
                        android:fontFamily="@font/montserrat_bold"
                        android:padding="10dp"
                        android:text="@string/send_otp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_regular_size" />

                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:text="@string/forgot_password"
                        android:textColor="@color/register_color"
                        android:textSize="@dimen/text_regular_size" />

                    <LinearLayout
                        android:id="@+id/footer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/register_left"
                            android:textColor="@color/forgot_password"
                            android:textSize="@dimen/text_regular_size" />

                        <TextView
                            android:id="@+id/register"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/register_right"
                            android:textColor="#75055D"
                            android:textSize="@dimen/text_regular_size" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</layout>