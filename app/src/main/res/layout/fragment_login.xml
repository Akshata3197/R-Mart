<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/authentication_bg_1"
    android:padding="16dp"
    tools:context="com.rmart.authentication.views.LoginFragment"
    >
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/AuthenticationHeader"
            android:text="@string/login"/>
        <com.rmart.baseclass.views.CustomEditTextWithErrorText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/smartphone"
            android:hint="@string/hint_mobile_number"
            android:inputType="number"
            android:maxLength="10"
            app:error_trxt="@string/error_mobile_number"
            />
        <com.rmart.baseclass.views.CustomEditTextWithErrorText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_password"
            android:hint="@string/hint_password"
            android:inputType="numberPassword"
            android:maxLength="5"
            app:error_trxt="@string/error_empty_password"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:background="@drawable/submit_button_bg"
            android:layout_height="@dimen/field_height"
            android:textSize="@dimen/text_regular_size"
            android:text="@string/login"
            />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/forgot_password"
            android:textColor="@color/forgot_password"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_regular_size"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/register_left"
            android:textColor="@color/gray"
            android:fontFamily="@font/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_regular_size"/>
        <TextView
            android:id="@+id/register"
            android:layout_marginStart="8dp"
            android:text="@string/register_right"
            android:textColor="@color/register_color"
            android:fontFamily="@font/roboto_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_regular_size"/>
    </LinearLayout>
</RelativeLayout>