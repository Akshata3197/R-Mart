<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="8dp">
    <ImageView
        android:paddingTop="8dp"
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:src="@drawable/item_image"
        android:layout_height="wrap_content"
        android:background="@drawable/item_icon_bg"/>
    <LinearLayout
        android:translationZ="90dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        style="@style/item_title"
        android:id="@+id/title"
        android:text="@string/category"
        android:gravity="center"
        android:background="@color/item_bg_footer"/>
        <TextView
            android:id="@+id/sub_title_1"
            style="@style/item_sub_title"
            android:text="@string/sub_title_1"
            android:gravity="center"
            android:background="@color/item_bg_footer"/>
        <TextView
            android:id="@+id/sub_title_2"
            style="@style/item_sub_title"
            android:text="@string/sub_title_2"
            android:gravity="center"
            android:background="@drawable/item_icon_footer_bg"/>
    </LinearLayout>
</LinearLayout>
