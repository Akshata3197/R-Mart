<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_color_four"
    android:minHeight="40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_header_title_field"
        style="@style/text_style_medium_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/btn_view_all_field"
        android:textColor="@color/product_title_color" />

    <Button
        android:id="@+id/btn_view_all_field"
        style="@style/text_style_medium_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginEnd="10dp"
        android:textColor="@color/item_sub_title_color"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:text="@string/view_all"/>
</RelativeLayout>