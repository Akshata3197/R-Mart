<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:background="@drawable/item_product_bg"
    android:weightSum="3">
    <androidx.appcompat.widget.AppCompatImageView
        android:paddingTop="8dp"
        android:id="@+id/item_img"
        android:layout_centerHorizontal="true"
        android:src="@drawable/item_image"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/offer"
        style="@style/item_product_offer"
        android:text="@string/offer"
        >


    </androidx.appcompat.widget.AppCompatTextView>
    <LinearLayout
        android:layout_below="@+id/item_img"
        android:translationZ="90dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/item_title"
            android:id="@+id/title"
            android:text="@string/product_name"
            android:gravity="center"/>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_title_1"
                android:text="@string/product_unit"
                style="@style/item_product_unit"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_title_2"
                style="@style/item_product_cost"
                android:layout_height="wrap_content"
                android:text="Rs.98" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_title_3"
                android:text="@string/strikeout"
                style="@style/item_product_unit"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/available_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/button_bg"
            android:text="@string/available_other_sizes"
            />
    </LinearLayout>
</RelativeLayout>
