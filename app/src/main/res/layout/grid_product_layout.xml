<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:background="@drawable/item_product_bg"
    android:weightSum="3">

    <RelativeLayout
        android:id="@+id/item_img_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:id="@+id/progress_layout_field"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <com.rmart.baseclass.views.ProgressBarCircular
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center" />

            <TextView
                style="@style/text_style_small_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/loading"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <com.rmart.utilits.custom_views.CustomNetworkImageView
            android:id="@+id/item_img"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:visibility="gone" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/offer"
        style="@style/item_product_offer" />

    <LinearLayout
        android:layout_below="@+id/item_img_layout"
        android:translationZ="90dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/item_title"
            android:id="@+id/title"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_title_1"
                style="@style/item_product_unit" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_title_2"
                style="@style/item_product_cost"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_title_3"
                android:textColor="@color/discount"
                style="@style/item_product_unit"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/available_units"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/button_bg" />
    </LinearLayout>
</RelativeLayout>
