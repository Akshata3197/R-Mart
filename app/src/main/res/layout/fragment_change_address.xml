<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_delivery_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="@string/delivery_address"
        android:textColor="@color/grey_color_two" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addresses_list_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_select_this_address"
        android:layout_below="@id/tv_delivery_address"
        android:layout_margin="25dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_this_address"
        style="@style/text_style_medium_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_add_new_address"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/theme_rounded_borders_bg_two"
        android:minHeight="40dp"
        android:text="@string/select_this_address"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_new_address"
        style="@style/text_style_medium_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/grey_rounded_borders_bg_two"
        android:minHeight="40dp"
        android:text="@string/add_new_address"
        android:textAllCaps="false" />


</RelativeLayout>