<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="category"
            type="com.rmart.retiler.inventory.category.model.Category" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="15dp"
        android:id="@+id/topview">
        <RelativeLayout
            android:orientation="vertical"
            app:background="@drawable/shop_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                app:imageUrl="@{category}"
                android:layout_above="@+id/name"
                android:id="@+id/img_designlistlayout"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:layout_height="180dp"
                    />
                <ImageView
                    android:id="@+id/loadericon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/loader_newrelease"
                    android:background="@null"
                    android:elevation="2dp"
                    />

            </RelativeLayout>
            <TextView
                android:id="@+id/name"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                tools:text="Parle G"
                android:text="@{category.name}"
                android:minLines="2"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>