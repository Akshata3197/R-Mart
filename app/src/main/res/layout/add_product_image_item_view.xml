<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/product_image_layout_field"
        android:layout_width="120dp"
        android:layout_height="120dp">

        <com.rmart.utilits.custom_views.CustomNetworkImageView
            android:id="@+id/iv_product_image_field"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:background="@drawable/grey_filled_rounded_borders_bg"
            android:contentDescription="@string/app_name"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/add" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_delete_product_image_field"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:background="@drawable/delete" />
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_add_product_image_field"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/add"
        android:visibility="gone" />
</LinearLayout>