<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rmart.authentication.views.LoginFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessParent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView

        android:id="@+id/slice"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:scaleType="fitXY"
        android:src="@mipmap/cornner"
        />
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/unlockicon"
        />




    <LinearLayout
        android:layout_below="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textSize="35sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_width="match_parent"
            android:text="@string/change_password"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_regular_size"
            android:textColor="@color/item_sub_title_color"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="match_parent"
            android:text="@string/subchange_password"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/otp"
            android:layout_marginTop="20dp"
            android:textColor="@color/item_sub_title_color"
            android:textSize="@dimen/text_regular_size"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:weightSum="4"
            android:layout_marginTop="10dp"
            android:layout_below="@id/security_textView"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:maxLength="1"
                android:layout_weight="1"
                android:imeOptions="actionNone"
                android:gravity="center"
                android:background="@drawable/otp_background"
                android:layout_marginRight="10dp"
                android:id="@+id/otp_editTextOne"
                android:inputType="number"
                />


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:maxLength="1"
                android:layout_weight="1"
                android:gravity="center"
                android:imeOptions="actionNone"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/otp_editTextTwo"
                android:background="@drawable/otp_background"
                android:inputType="number"
               />

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:maxLength="1"
                android:background="@drawable/otp_background"
                android:gravity="center"
                android:imeOptions="actionNone"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="number"
                android:id="@+id/otp_editTextThree"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:maxLength="1"
                android:gravity="center"
                android:layout_weight="1"
                android:imeOptions="actionNone"
                android:background="@drawable/otp_background"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:id="@+id/otp_editTextFour"/>
        </LinearLayout>


