<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/authentication_bg_2"
    android:padding="16dp"
    tools:context="com.rmart.authentication.views.LoginFragment"
    >
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_above="@+id/footer"
        android:layout_width="match_parent"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/AuthenticationHeader"
            android:text="@string/change_password"/>

        <com.rmart.baseclass.views.CustomEditTextWithErrorText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_password"
            android:hint="@string/hint_current_password"
            android:inputType="numberPassword"
            android:maxLength="5"
            app:error_trxt="@string/error_empty_password"
            />

        <com.rmart.baseclass.views.CustomEditTextWithErrorText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_password"
            android:hint="@string/hint_new_password"
            android:inputType="numberPassword"
            android:maxLength="5"
            app:error_trxt="@string/error_empty_password"
            />
        <com.rmart.baseclass.views.CustomEditTextWithErrorText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_password"
            android:hint="@string/hint_conform_password"
            android:inputType="numberPassword"
            android:maxLength="5"
            app:error_trxt="@string/error_empty_password"
            />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_alignParentBottom="true"
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:background="@drawable/submit_button_bg"
        android:layout_height="@dimen/field_height"
        android:textSize="@dimen/text_regular_size"
        android:text="@string/change_password"
        />
</RelativeLayout>