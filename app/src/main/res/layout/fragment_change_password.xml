                android:layout_width="55dp"
                android:layout_height="42dp"
                android:maxLength="1"
                android:layout_weight="1"
                android:gravity="center"
                android:imeOptions="actionNone"
                android:background="@drawable/otp_background"
                android:layout_marginRight="10dp"
                android:id="@+id/confirm_editTextOne"
                android:inputType="number"
                android:nextFocusRight="@id/editTextTwo"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:maxLength="1"
                android:layout_weight="1"
                android:gravity="center"
                android:imeOptions="actionNone"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/confirm_editTextTwo"
                android:background="@drawable/otp_background"
                android:inputType="number"
                android:nextFocusRight="@id/editTextThree"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:maxLength="1"
                android:background="@drawable/otp_background"
                android:gravity="center"
                android:layout_weight="1"
                android:imeOptions="actionNone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:nextFocusRight="@id/editTextFour"
                android:inputType="number"
                android:id="@+id/confirm_editTextThree"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:maxLength="1"
                android:gravity="center"
                android:imeOptions="actionNone"
                android:layout_weight="1"
                android:background="@drawable/otp_background"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:id="@+id/confirm_editTextFour"/>
        </LinearLayout>

