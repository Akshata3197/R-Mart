<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--        <item name="colorPrimary">#F4F4F4</item>-->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="titleTextStyle">@style/MaterialAlertDialog.MaterialComponents.Title.Text</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="CustomLoadingDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:bottomBright">@color/white</item>
        <item name="android:bottomDark">@color/white</item>
        <item name="android:bottomMedium">@color/white</item>
        <item name="android:centerBright">@color/white</item>
        <item name="android:centerDark">@color/white</item>
        <item name="android:centerMedium">@color/white</item>
        <item name="android:fullBright">@color/colorPrimary</item>
        <item name="android:fullDark">@color/colorPrimary</item>
        <item name="android:topBright">@color/colorPrimary</item>
        <item name="android:topDark">@color/colorPrimary</item>
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:colorAccent">#1b5e20</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@style/CustomMenuTextAppearance</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

    </style>
    <style name="CustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AuthenticationHeader">

        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/item_title_color</item>
    </style>
    <style name="product_preview_item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/product_preview_title_color</item>
    </style>
    <style name="product_preview_item_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_product_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/item_title_color</item>
    </style>
    <style name="item_product_offer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/offer_color</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="product_unit_offer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/offer_color</item>
        <item name="android:layout_weight">2</item>
    </style>
    <style name="product_unit_active">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/offer_color</item>
        <item name="android:text">Active</item>
        <item name="android:layout_weight">2</item>
    </style>
    <style name="product_unit_in_active">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#9F9F9F</item>
        <item name="android:text">In Active</item>
        <item name="android:layout_weight">2</item>
    </style>
    <style name="product_unit_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#6E6E6E</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="product_unit_cost">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="item_product_cost">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/item_title_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="item_product_unit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="item_sub_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/item_sub_title_color</item>
    </style>

    <style name="upload_product_item_field">
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingLeft">@dimen/thumb_icon_padding</item>
        <item name="android:paddingRight">@dimen/thumb_icon_padding</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">@drawable/edit_product_field_bg</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="list_items">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/option_select_item_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/edit_text_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:gravity">center|left</item>
    </style>


</resources>